# MultiNegócios Locais — Environment Variables
# Copy to .env and fill with your values

# ═══════════════════════════════════════════════════════════════
# DATABASE (Required)
# ═══════════════════════════════════════════════════════════════
DATABASE_URL="postgresql://user:password@localhost:5432/multinegocioslocais"

# ═══════════════════════════════════════════════════════════════
# GOOGLE PLACES API (Required for E-2)
# ═══════════════════════════════════════════════════════════════
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# ═══════════════════════════════════════════════════════════════
# MERCADO PAGO (Required for E-4)
# ═══════════════════════════════════════════════════════════════
MERCADOPAGO_ACCESS_TOKEN="your-mercadopago-access-token"
MERCADOPAGO_PUBLIC_KEY="your-mercadopago-public-key"

# ═══════════════════════════════════════════════════════════════
# NF-e API (Optional - can be added later)
# ═══════════════════════════════════════════════════════════════
NFE_API_KEY="your-nfe-api-key"
NFE_ENVIRONMENT="sandbox" # sandbox | production

# ═══════════════════════════════════════════════════════════════
# DIGITAL SIGNATURE (Optional - can be added later)
# ═══════════════════════════════════════════════════════════════
SIGNATURE_API_KEY="your-signature-api-key"

# ═══════════════════════════════════════════════════════════════
# AUTHENTICATION (Required for Admin)
# ═══════════════════════════════════════════════════════════════
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# ═══════════════════════════════════════════════════════════════
# EMAIL - RESEND (Required for email notifications)
# Get your API key at https://resend.com
# ═══════════════════════════════════════════════════════════════
RESEND_API_KEY="re_your_resend_api_key"
FROM_EMAIL="noreply@seudominio.com.br"
ADMIN_EMAIL="admin@seudominio.com.br"

# ═══════════════════════════════════════════════════════════════
# EMAIL - SMTP (Alternative - not used currently)
# ═══════════════════════════════════════════════════════════════
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="contato@multinegocioslocais.com.br"

# ═══════════════════════════════════════════════════════════════
# DADOS DA EMPRESA (Required for contracts)
# ═══════════════════════════════════════════════════════════════
EMPRESA_RAZAO_SOCIAL="Sua Empresa Ltda"
EMPRESA_CNPJ="00.000.000/0001-00"
EMPRESA_ENDERECO="Sua Cidade/UF"
